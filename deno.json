{
    "name": "@xeaone/style",
    "version": "0.0.1",
    "include": [
        "."
    ],
    "exports": "./build/mod.ts",
    "lint": {
        "rules": {
            "exclude": [
                "no-explicit-any"
            ]
        }
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 800,
        "indentWidth": 4,
        "singleQuote": true,
        "proseWrap": "preserve"
    },
    "tasks": {
        "b": "deno run --allow-all script/build.ts",
        "w": "deno run --allow-all script/watch.ts",
        "example": "file_server docs"
    }
}
